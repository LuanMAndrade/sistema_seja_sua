# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf

# Django files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.json text eol=lf

# Markdown files
*.md text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf
*.txt text eol=lf

# Git files
.gitattributes text eol=lf
.gitignore text eol=lf

# Django specific
*.po text eol=lf
*.pot text eol=lf

# Images (binary)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary

# Other binary files
*.db binary
*.sqlite3 binary
*.pyc binary
*.pyo binary
*.pyd binary
