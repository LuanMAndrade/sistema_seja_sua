# Database Configuration
DB_NAME=store_management_db
DB_USER=your_postgres_user
DB_PASSWORD=your_postgres_password
DB_HOST=localhost
DB_PORT=5432

# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Google Calendar API
# Download credentials.json from Google Cloud Console and place in project root
# The credentials.json file will be used for OAuth authentication
GOOGLE_CREDENTIALS_PATH=credentials.json
GOOGLE_CALENDAR_ID=primary

# Tiny ERP API
# Get your API token from Tiny ERP dashboard
TINY_ERP_API_TOKEN=your_tiny_erp_api_token_here
TINY_ERP_API_URL=https://api.tiny.com.br/api2
